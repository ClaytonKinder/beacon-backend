doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Roboto:100,400', rel='stylesheet')
    style(type='text/css').
      html {
        height: 100vh;
        background: #027be3;
        font-family: 'Roboto', sans-serif;
      }
      body {
        font-size: 16px;
        height: 100%;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .content-wrapper {
        text-align: center;
      }
      .content-wrapper h1 {
        font-size: 5rem;
        font-weight: lighter;
        letter-spacing: 0.5rem;
        margin: 0 0.5rem 0;
      }
      .content-wrapper a {
        color: white;
      }
      .content-wrapper ul {
        text-align: left;
      }
      .content-wrapper li:not(:last-of-type) {
        margin-bottom: 0.5rem
      }
      
  body
    div.content-wrapper
      h1 BEACON
      ul
        li If you're looking for Beacon, 
